# Reddit Ads API (already configured)
REDDIT_CLIENT_ID=your_ads_api_client_id
REDDIT_CLIENT_SECRET=your_ads_api_client_secret
REDDIT_AD_ACCOUNT_ID=a2_xxxxx

# Reddit Native API (for creating posts - NEW)
# Get these from: https://www.reddit.com/prefs/apps
REDDIT_NATIVE_CLIENT_ID=your_native_api_client_id
REDDIT_NATIVE_CLIENT_SECRET=your_native_api_client_secret
REDDIT_NATIVE_REDIRECT_URI=http://localhost:3000/callback/reddit-native

# Google Sheets API (for reading ad copy)
# Get from: https://console.cloud.google.com
GOOGLE_SHEETS_API_KEY=your_google_sheets_api_key
GOOGLE_SHEETS_CLIENT_EMAIL=your_service_account@project.iam.gserviceaccount.com
GOOGLE_SHEETS_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n..."

# Google Drive API (for downloading images)
# Same credentials as Sheets (unified API)
GOOGLE_DRIVE_FOLDER_ID=your_drive_folder_id

# Default client (used if --client not specified)
DEFAULT_CLIENT=bluprintx
